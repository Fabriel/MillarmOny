{% extends 'MillarmonyUsersBundle::layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="container">

        <div class="row">

            <div class="box">

                {% for flashMessage in app.session.flashbag.get('info') %}
                    <div class="alert alert-success text-center">
                        {{ flashMessage }}
                    </div>
                {% endfor %}

                <hr>
                <h2 class="intro-text text-center"><strong>{{ title }}</strong></h2>
                <hr>

                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}

                <br />

                <div class="form-group text-center">
                    <label for="name">Nom de l'évènement :</label>
                    <div class="col-lg-12">
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control',
                            'style': 'color: black; max-width: 400px; margin: auto; text-align: center;'
                        }}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-offset-2 col-lg-4">
                        <div class="form-group text-center">
                            <label for="date">Date :</label>
                                {{ form_errors(form.date) }}
                                {{ form_widget(form.date, {'attr': {'class': 'form-control',
                                    'style': 'color: black; max-width: 300px; margin: auto; text-align: center;',
                                    'placeholder': 'Au format JJ/MM/AAAA'
                                }}) }}
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group text-center">
                            <label for="hour">Heure :</label>
                            {{ form_errors(form.hour) }}
                            {{ form_widget(form.hour, {'attr': {'class': 'form-control',
                                'style': 'color: black; max-width: 200px; margin: auto; text-align: center;',
                                'placeholder': 'Au format HH h mm'
                            }}) }}
                        </div>
                    </div>
                </div>

                <div class="form-group text-center">
                    <label for="localization">Lieu :</label>
                    <div class="col-lg-12">
                        {{ form_errors(form.localization) }}
                        {{ form_widget(form.localization, {'attr': {'class': 'form-control',
                            'style': 'color: black; max-width: 400px; margin: auto; text-align: center;'
                        }}) }}
                    </div>
                </div>

                <div class="form-group text-center">
                    <label for="description">Description :</label>
                    <div class="col-lg-12">
                        {% if form_errors(form.description) %}
                            <div class="alert alert-danger text-center" style="max-width: 600px; margin: auto;">
                                {{ form_errors(form.description) }}
                            </div>
                        {% endif %}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control',
                            'rows': '15',
                            'novalidate' : 'novalidate'
                        }}) }}
                    </div>
                </div>

                <div class="form-group text-center">
                    <a href="{{ path('millarmony_site_homepage') }}" class="btn btn-secondary" style="border: 1px solid; border-radius: 5px; color: black">Accueil</a>
                    <a href="{{ path('millarmony_admin_manage') }}" class="btn btn-secondary" style="border: 1px solid; border-radius: 5px; color: black">Administration</a>
                    <input type="submit" class="btn btn-primary" style="border: 1px solid; border-radius: 5px; color: white" value="Valider" />
                </div>

                {{ form_rest(form) }}

                {{ form_end(form) }}

            </div>

        </div>

    </div>
{% endblock %}
