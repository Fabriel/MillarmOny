{% extends 'MillarmonySiteBundle::layout.html.twig'%}

{% block title %}{{ parent() }} - Évènement{% endblock %}

{% block content %}
    <div class="container">

        {% for flashMessage in app.session.flashbag.get('info') %}
            <div class="alert alert-success text-center">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="row">

            <div class="box">

                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        {{ event.date|localizeddate('full', 'none') }} à {{ event.hour }}<br /><br />
                        {{ event.localization }}
                        <br /><br />
                        <strong>{{ event.name }}</strong>
                    </h2>
                    <hr>
                    {{ event.description|raw}}
                </div>

            </div>

        </div>

    </div>
{% endblock %}
