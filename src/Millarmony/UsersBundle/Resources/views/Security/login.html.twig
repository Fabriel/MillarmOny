{% extends 'MillarmonyUsersBundle::layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
<div class="container registration">

    <div class="row">

        <div class="box">

            {% if error %}
                <div class="alert alert-warning text-center">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <hr>
            <h2 class="intro-text text-center"><strong>Connexion</strong></h2>
            <hr>
            <br />

            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group text-center">
                    <label for="username">Pseudonyme :</label>
                    <div class="col-lg-12">
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"
                               style="max-width: 200px; text-align: center; margin: auto;" required="required" />
                    </div>
                </div>

                <br />

                <div class="form-group text-center">
                    <label for="password">Mot de passe :</label>
                    <div class="col-lg-12">
                        <input type="password" class="form-control" id="password" name="_password"
                               style="max-width: 200px; text-align: center; margin: auto;" required="required" />
                    </div>
                </div>

                <br /><br />

                <div class="form-group text-center">
                    <div class="col-lg-12">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">Se souvenir de moi</label>
                    </div>
                </div>

                <br /><br />

                <div class="form-group text-center">
                    <div class="col-lg-12">
                        <input type="submit" class="btn btn-secondary" style="border: 1px solid; border-radius: 5px;"
                               id="_submit" name="_submit" value="Connexion" />
                    </div>
                </div>

                <br /><br />

                <div class="text-center">
                    <a href="{{ path("fos_user_resetting_request") }}">Mot de passe oubli√© ?</a>
                </div>

            </form>

        </div>

    </div>

</div>
{% endblock %}
