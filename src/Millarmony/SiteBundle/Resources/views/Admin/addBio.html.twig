{% extends 'MillarmonyUsersBundle::layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="container">

    <div class="row">

        <div class="box">

            {% for flashMessage in app.session.flashbag.get('info') %}
                <div class="alert alert-success text-center">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            <hr>
            <h2 class="intro-text text-center"><strong>{{ title }}</strong></h2>
            <hr>
            <br />

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="text-center"><em>S'il s'agit d'un groupe, seul le nom doit être saisi.</em></div>

            <br />

            <div class="form-group text-center">
                <label for="firstName">Prénom :</label>
                <div class="col-lg-12">
                {{ form_errors(form.firstName) }}
                {{ form_widget(form.firstName, {'attr': {'class': 'form-control',
                    'style': 'color: black; max-width: 400px; margin: auto; text-align: center;'
                }}) }}
                </div>
            </div>

            <div class="form-group text-center">
                <label for="firstName">Nom :</label>
                <div class="col-lg-12">
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control',
                        'style': 'color: black; max-width: 400px; margin: auto; text-align: center;'
                    }}) }}
                </div>
            </div>

            <div class="form-group text-center">
                <label for="description">Texte :</label>
                <div class="col-lg-12">
                    {% if form_errors(form.description) %}
                    <div class="alert alert-danger text-center" style="max-width: 600px; margin: auto;">
                        {{ form_errors(form.description) }}
                    </div>
                    {% endif %}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control',
                        'rows': '15',
                        'novalidate' : 'novalidate'
                    }}) }}
                </div>
            </div>

            <div class="form-group text-center">
                <a href="{{ path('millarmony_site_homepage') }}" class="btn btn-secondary" style="border: 1px solid; border-radius: 5px; color: black">Accueil</a>
                <a href="{{ path('millarmony_admin_manage') }}" class="btn btn-secondary" style="border: 1px solid; border-radius: 5px; color: black">Administration</a>
                <input type="submit" class="btn btn-primary" style="border: 1px solid; border-radius: 5px; color: white" value="Valider" />
            </div>

            {{ form_rest(form) }}

            {{ form_end(form) }}

        </div>

    </div>

</div>
{% endblock %}
