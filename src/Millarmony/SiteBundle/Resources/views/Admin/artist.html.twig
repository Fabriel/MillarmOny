{% extends 'MillarmonySiteBundle::layout.html.twig'%}

{% block title %}{{ parent() }} - Artiste{% endblock %}

{% block content %}
    <div class="container">

        {% for flashMessage in app.session.flashbag.get('info') %}
            <div class="alert alert-success text-center">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <div class="row">

            <div class="box">

                <div class="col-lg-12">
                    <hr>
                    <h2 class="intro-text text-center">
                        {% if artist.firstName %}
                            {{ artist.firstName }}
                            <br /><br />
                        {% endif %}
                        <strong>{{ artist.name }}</strong>
                    </h2>
                    <hr>
                    {{ artist.description|raw}}
                </div>

            </div>

        </div>

    </div>
{% endblock %}
